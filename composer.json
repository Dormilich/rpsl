{
    "name": "dormilich/rpsl",
    "description": "Define base functionality for RPSL (whois) objects",
    "type": "library",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Bertold von Dormilich",
            "email": "dormilich@netscape.net",
            "role": "Developer"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "ext-xmlwriter": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Dormilich\\RPSL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dormilich\\RPSL\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox"
    }
}
